// Base: html, tamaño de fuentes, iconos, colores. Optimización
$fontSize ?= 16

*, *:before, *:after
	box-sizing inherit
	text-rendering optimizelegibility

a
	color $color_9
	transition all 0.08s ease-in-out
	&:hover
	&:focus
		color $color_7
	&:active
		color $color_5

html
	box-sizing border-box
	color $fontColor
	font-family $baseFont
	font-size unit($fontSize / 16, 'em')
	text-align center
p
	font-family $baseFont

@media all and (min-width: 900px)
	body
		background $negro url("../img/body-background.jpg") fixed
		background-size( 150px 150px )

	.wrapper
		background-color $blanco_puro
		margin 0 auto
		max-width 90%

	.wrapper--home
		max-width 100%
