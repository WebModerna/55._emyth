// Fuentes

// Familia de fuente principal
// $baseFont = 'Titillium Web', 'Helvetica Neue', Helvetica, sans-serif
// $baseFontItalic = 'Titillium Web Italic', 'Helvetica Neue', Helvetica, sans-serif
// $baseFont = 'Noto Serif', Georgia, Garamond, serif
$baseFont = "Lora", "Georgia", Garamond, serif

// Familia de fuente para títulos
// $baseHeadingFont = 'Lato', sans-serif
$baseHeadingFont = 'Titillium Web', 'Helvetica Neue', Helvetica, sans-serif

// Nombre de la fuente de iconos
$iconFont = 'icono'

// Color base del texto
$fontColor = $negro

// Tamaño base del texto en px. Será convertido automáticamente a em (ver base.styl)
$fontSize = 20
