$gris = #aaa
$negro = #555
$negro_suave = #888
$negro_puro = #000

// Paleta de Colores de Flat UI Colores

// Verdes
$turquesa = #1abc9c
$verde_mar = #16a085
$esmeralda = #1abc9c
$neferteris = #16a085

// Azules
$azul_claro = #2980b9
$celeste_oscuro = #3498db

// Morados
