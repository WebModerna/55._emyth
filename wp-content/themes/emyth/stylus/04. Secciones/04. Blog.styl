// Blog
.contenedor
	padding 0.5em

.blog + .contenido
	width 100%

.blog
	.heading
		background $color_5
		color $blanco
		margin-bottom 1em
	&--item
		margin-bottom 1em
		padding 5px
		figure
			margin 0
			position relative

		&--content
			color $negro
			text-align left

		&--nota
			filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#90000000', endColorstr='#90000000',GradientType=1 )")
			background rgba($negro_puro, 0.8)
			height 20px
			left 0
			position absolute
			top 0
			&:after
				border-bottom 0px solid transparent
				border-left   0px solid transparent
				border-right 20px solid transparent
				border-top   20px solid rgba($negro_puro, 0.8)
				content ""
				position absolute
				right -20px
				top 0
			&--fecha
				color $blanco
				font-family $baseHeadingFont
				font-size 0.7em
				text-align center

		&--header
			font-size 1.2em
			// border-bottom 5px solid $color_5
			margin 0 0 2% 0
			padding 1% 0
			position relative
			// text-align left
			a
				color $color_5
				display block
				&:after
					background $color_5
					background rgba($color_5, 0.5)
					content ""
					display block
					height 0
					position absolute
					left 0
					bottom 0
					transition all 0.2s ease-in-out
					width 100%
					// z-index -1
				&:hover
				&:focus
					&:after
						height 5%

@media all and (min-width: 480px)
	.blog
		&--item
			&--nota
				min-width 100px
				&--fecha
					&-dia
						font-size 2em

@media all and (min-width: 960px)
	.blog
		&--losposts
			display inline-block
			vertical-align top

		&--item
			border 1px solid nube
			display inline-block
			max-width 32%
			padding 1%
			vertical-align top
			&--header
				font-size 1.5em

