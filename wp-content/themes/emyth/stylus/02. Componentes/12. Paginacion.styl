// Paginación
.pagination
	padding 0.3em
	ul
		color $gris
		font-family $baseHeadingFont
		margin 0.5em 0
		list-style none
		padding 0
		display inline-block

		li
			border 1px solid $silver
			display inline-block
			line-height 1.5
			margin-bottom 0
			margin-right 0
			margin-top 0
			padding 0
			vertical-align top
			&:hover
			&:focus
			&:active
				background $nube

			a
				display block
				margin 0
				padding 0.2em 0.6em
				text-decoration none
				&:hover
				&:focus
				&:active
					color $azul_claro
		li + li
			border-left none

		.current
			background $color_5
			color $blanco_puro
			padding 0.2em 0.6em
			&:hover
			&:focus
			&:active
				background $color_5
				cursor none

		.first-child
			border-radius 0.25em 0 0 0.25em

		.last-child
			border-radius 0 0.25em 0.25em 0

		.pagination--leyenda
			padding 0.2em 0.6em
			&:hover
			&:focus
			&:active
				background none
