// Alertas
.alerta
	border-radius 0.2em
	border-style solid
	border-width 1px
	// box-shadow -5px 5px 10px $negro_puro
	box-sizing border-box
	color $gris_fuerte
	display inline-block
	margin 0.5em auto
	overflow hidden
	transition_comun()

	// Alineando los div interiores
	div
		display table-cell
		vertical-align middle


// Tipos de cuadros de mensajes
.alerta
	// Precaución
	&-rojo
		border-color $color_5
		.alerta--close
			a
				color $color_5
		.alerta--icono
			background $color_5

	// Información
	&-azul
		border-color $color_9
		.alerta--close
			a
				color $color_9
		.alerta--icono
			background $color_9

	// Atención
	&-amarillo
		border-color $amarillo
		.alerta--close
			a
				color $amarillo
		.alerta--icono
			background $amarillo

	// Todo ok
	&-verde
		border-color $esmeralda
		.alerta--close
			a
				color $esmeralda
		.alerta--icono
			background $esmeralda

	// Una pregunta
	&-gris
		border-color $silver
		.alerta--close
			a
				color $silver
		.alerta--icono
			background $silver

/* Secciones interiores de los cuadros de mensajes */
.alerta
	&--close
	&--icono
		font-size 1.5em
		padding 0 0.5em

	&--close
		border-left 1px solid inherit
		padding 0
		margin 0
		a
			display block
			padding 0.5em
			text-decoration none
			text-shadow_lindo()
	&--icono
		span
			color $blanco_puro
			text-shadow_lindo()

	&--mensaje
		padding 1em
		h3, h4, h5, h6
			margin 0