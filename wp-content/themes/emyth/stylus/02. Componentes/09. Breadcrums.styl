// Las famosas miguitas de pan
/*
Un simple ejemplo
<ul class="breadcrums">
	<li class="breadcrums--label">Ud. está aquí: </li>
	<li class="breadcrums-inicio"><a href="">Inicio</a></li>
	<li><a href="">Medio</a></li>
	<li><a href="">Final</a></li>
	<li class="breadcrums-muted">Ya llegué</li>
</ul>
*/

.breadcrums
	border-radius 0.25em
	display none
	font-family $baseHeadingFont
	font-size 0.8em
	list-style none
	margin 0
	li
		color $gris
		display inline-block
		vertical-align middle
		width auto
	li + li:before
		content "»"
		display inline-block
		margin auto 0.3em
	.breadcrums--label + li
		display inline
		&:before
			content ""

	.breadcrums-inicio
		&:before
			content ""
			margin-right 0

@media all and (min-width: 800px)
	.breadcrums
		border 1px solid $nube
		display block
		margin-bottom 1em
		padding 0.4em 0.3em
		.post-categories
			display inline-block
			margin 0
			padding 0