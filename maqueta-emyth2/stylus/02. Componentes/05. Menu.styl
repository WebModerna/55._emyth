// El menú de navegación. Precisamente el botón. La hamburguesa

$color_del_menu ?= $blanco_puro
$color_del_menu_hover ?= $color_8
$color_del_menu_focus ?= $color_9
$color_del_menu_active ?= $color_5

.boton_menu
	display inline-block
	float right
	margin 1em 0.5em

.menu
	a
		display table
		overflow hidden
		text-decoration none
		width 40px
		span
			background $color_del_menu
			border-radius 1em
			display block
			height 3px
			margin auto
			width 100%
		span + span
			margin-top 0.4em

		&:hover
			span
				background $color_del_menu_hover
		&:active
			span
				background $color_del_menu_active

