// Paginación
.pagination
	border 1px solid $nube
	border-radius 0.25em
	font-family $baseFont
	color $gris
	margin 0.5em auto
	padding 0.3em 0.4em
	a
		padding-right 0.2em
		padding-left 0.2em
	span
		&:first-child
			&:after
				content " :"
	.current
		color $gris_fuerte
		font-family $baseHeadingFont
		margin 0.1em

	&--atras
	&--primero
	&--siguiente
	&--ultimo
		font-size 1em
		padding-right 0.5em
		padding-left 0.5em


// Navegación de post
.enlaces__navegacion
	border 1px solid $nube
	border-radius 0.25em
	display block
	display table
	margin 1em auto
	width 100%
	div
		text-align center
		a
			display block
			height 100%
			margin 1px 0 0 0
			padding 0.5em 1em
	div + div
		border-top 1px solid $nube

	.prev
		a
			&:before
				content "← "
	.next
		a
			&:after
				content " →"


// Cuando se agranda la pantalla
@media all and (min-width:480px)
	.enlaces__navegacion
		div
			display inline-block
			display table-cell
			vertical-align top
			width 49.9%
		div + div
			border-left 1px solid $nube
			border-top none
		.next
			text-align right
		.prev
			text-align left