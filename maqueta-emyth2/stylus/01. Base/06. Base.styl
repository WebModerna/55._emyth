// Base: html, tamaño de fuentes, iconos, colores. Optimización
$fontSize ?= 16

*, *:before, *:after
	box-sizing inherit
	text-rendering optimizelegibility

a
	color $color_9
	transition all 0.1s ease-in-out
	&:hover
	&:focus
		color $color_7
	&:active
		color $color_5

html
	box-sizing border-box
	color $fontColor
	font-family $baseFont
	font-size unit($fontSize / 16, 'em')
	text-align center

body
	scrollbar-face-color $color_5
	scrollbar-shadow-color $negro
	scrollbar-highlight-color $color_7
	scrollbar-3dlight-color $color_8
	scrollbar-DarkShadow-color $color_9
	scrollbar-track-color $silver
	scrollbar-arrow-color $negro
/*
::-webkit-scrollbar
::-webkit-scrollbar-button
::-webkit-scrollbar-track
::-webkit-scrollbar-track-piece
::-Webkit-scrollbar-thumb
::-webkit-scrollbar-esquina
::-webkit-Resizer
*/
::-webkit-scrollbar
	border 3px dotted $color_5
	width 1em
::-webkit-scrollbar-track
	background-color $nube
	border-left 1px $gris solid
::-webkit-scrollbar-thumb
	background-color $color_8
	&:hover
		background-color $color_9